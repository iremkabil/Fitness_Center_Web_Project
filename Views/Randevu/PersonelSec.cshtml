@model List<Fitness_Center_Web_Project.Models.Personel>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var islem = ViewBag.Islem as Fitness_Center_Web_Project.Models.Islem;
}

<h2 class="text-center">Personel Seçimi</h2>

@if (ViewBag.HataMesaji != null)
{
    <div class="alert alert-warning text-center">@ViewBag.HataMesaji</div>
}

@if (islem != null)
{
    <p class="text-center">Seçilen işlem: <strong>@islem.Ad</strong></p>
}

@if (Model != null && Model.Any())
{
    <form method="get" asp-controller="Randevu" asp-action="TarihSaatSec" class="text-center">
        <input type="hidden" name="islemId" value="@islem?.Id" />

        <div class="d-flex flex-column align-items-center gap-2">
            @foreach (var p in Model)
            {
                <label class="border rounded p-2" style="min-width:300px; text-align:left;">
                    <input type="radio" name="personelId" value="@p.Id" required />
                    @p.Ad @p.Soyad
                </label>
            }
        </div>

        <button type="submit" class="btn btn-success mt-3">Devam Et</button>
    </form>
}
