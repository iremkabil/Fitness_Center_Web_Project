@model IEnumerable<Fitness_Center_Web_Project.Models.PersonelUzmanlik>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewBag.Title = "İşlem Seçimi";
}

<div class="container" style="padding: 20px;">
    <h2 class="text-center" style="margin-bottom: 30px;">İşlem Seçimi</h2>
    <p class="text-center">Lütfen bir işlem seçin:</p>

    <!-- 405 hatası için POST yerine GET -->
    <form asp-controller="Randevu" asp-action="PersonelSec" method="get" style="max-width: 800px; margin: 0 auto;">
        @foreach (var uzmanlik in Model ?? Enumerable.Empty<Fitness_Center_Web_Project.Models.PersonelUzmanlik>())
        {
            <div class="card mb-3">
                <div class="card-header text-center">
                    <strong>@uzmanlik.UzmanlikAdi</strong>
                </div>

                <div class="card-body">
                    @if (uzmanlik.Islemler != null && uzmanlik.Islemler.Any())
                    {
                        <ul class="list-group">
                            @foreach (var islem in uzmanlik.Islemler)
                            {
                                <li class="list-group-item">
                                    <input type="radio" name="islemId" value="@islem.Id" id="islem-@islem.Id" />
                                    <label for="islem-@islem.Id">
                                        @islem.Ad - @islem.Ucret.ToString("C") (Süre: @islem.Sure.TotalMinutes dak.)
                                    </label>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted">Bu uzmanlığa ait işlem yok.</div>
                    }
                </div>
            </div>
        }

        <div style="text-align: center; margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Devam Et</button>
        </div>
    </form>
</div>
