@using Microsoft.AspNetCore.Mvc.Rendering
@model Fitness_Center_Web_Project.Models.PersonelUzmanlik

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var islemler = ViewBag.Islemler as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2>Yeni Uzmanlık Ekle</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="UzmanlikAdi"></label>
        <input asp-for="UzmanlikAdi" />
        <span asp-validation-for="UzmanlikAdi"></span>
    </div>

    <div style="margin-top:10px;">
        <label>İşlemler</label><br />

        @foreach (var islem in islemler)
        {
            <div>
                <input type="checkbox"
                       name="seciliIslemler"
                       value="@islem.Value"
                       @(islem.Selected ? "checked" : "") />
                <span>@islem.Text</span>
            </div>
        }

        <div style="color:red;">
            @Html.ValidationMessage("Islemler")
        </div>
    </div>

    <div style="margin-top:10px;">
        <label asp-for="AktifMi"></label>
        <input asp-for="AktifMi" type="checkbox" />
    </div>

    <button type="submit">Kaydet</button>
    <a asp-action="Listele">İptal</a>
</form>
