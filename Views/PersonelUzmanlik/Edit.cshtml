@using Microsoft.AspNetCore.Mvc.Rendering
@model Fitness_Center_Web_Project.Models.PersonelUzmanlik

@{
    ViewData["Title"] = "Uzmanlık Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Controller FillIslemlerForView() -> ViewBag.Islemler : List<SelectListItem>
    var islemler = ViewBag.Islemler as List<SelectListItem> ?? new List<SelectListItem>();
}

<h2>Uzmanlık Düzenle</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UzmanlikAdi" class="control-label">Uzmanlık Adı</label>
        <input asp-for="UzmanlikAdi" class="form-control" />
        <span asp-validation-for="UzmanlikAdi" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>İşlemler</label>

        @if (islemler.Any())
        {
            <div class="form-check">
                @foreach (var islem in islemler)
                {
                    var id = islem.Value; // string
                        <div>
                            <input type="checkbox"
                                    name="seciliIslemler"
                                    value="@id"
                                    class="form-check-input"
                                    id="islem-@id"
                                    @(islem.Selected ? "checked" : "") />
                            <label for="islem-@id" class="form-check-label">@islem.Text</label>
                        </div>
                }
            </div>
        }
        else
        {
            <div class="text-muted">Aktif hizmet/seans bulunamadı.</div>
        }

        <div class="text-danger">
            @Html.ValidationMessage("Islemler")
        </div>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AktifMi" class="control-label">Aktif mi?</label>
        <input asp-for="AktifMi" type="checkbox" class="form-check-input" />
        <span asp-validation-for="AktifMi" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Listele" class="btn btn-secondary">İptal</a>
    </div>
</form>
